---
export interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { 
  title, 
  description = "Santiago Ochoa - Developer & Data Scientist. Full-stack development and data solutions.", 
  image = "/og-image.jpg" 
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const socialImageURL = new URL(image, Astro.url).href;
---

<!DOCTYPE html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="canonical" href={canonicalURL} />
    <title>{title}</title>
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Santiago Ochoa Portfolio" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={socialImageURL} />
    <meta property="og:image:alt" content="Santiago Ochoa - Developer & Data Scientist Portfolio" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:locale" content="es_ES" />
    
    <!-- Twitter Cards -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@sochoav8a" />
    <meta name="twitter:creator" content="@sochoav8a" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={socialImageURL} />
    <meta name="twitter:image:alt" content="Santiago Ochoa - Developer & Data Scientist Portfolio" />
    
    <!-- Additional SEO -->
    <meta name="author" content="Santiago Ochoa" />
    <meta name="robots" content="index, follow" />
    <meta name="theme-color" content="#ffff00" />
    
    <!-- LinkedIn specific -->
    <meta property="article:author" content="Santiago Ochoa" />
  </head>
  <body class="bg-mono-0 text-mono-1000 font-sans antialiased selection:bg-brutal-yellow selection:text-mono-1000">
    <slot />
  </body>
</html> 