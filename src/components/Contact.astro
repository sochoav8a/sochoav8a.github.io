---
// Contact section component
---

<section id="contact" class="py-20 px-6 bg-gray-50">
  <div class="max-w-4xl mx-auto">
    <!-- Section header -->
    <div class="mb-16">
      <div class="flex items-center mb-4">
        <span class="text-gray-600">user@system:~$</span>
        <span class="ml-2">cat ./contact/info.txt</span>
      </div>
      <h2 class="text-4xl font-bold border-b-2 border-cyber-blue pb-2 inline-block">Contact</h2>
    </div>
    
    <div class="border-1 border-black bg-white rounded-hypr overflow-hidden hover:border-cyber-blue transition-colors duration-300">
      <!-- Terminal header -->
      <div class="border-b-1 border-black p-4 bg-black text-white">
        <h3 class="font-bold">contact_information.json</h3>
      </div>
      
      <!-- Contact content -->
      <div class="p-8 space-y-6">
        <div class="text-center mb-8">
          <p class="text-lg">
            Ready to bring your ideas to life? Let's discuss your next project.
          </p>
        </div>
        
        <!-- Contact methods -->
        <div class="space-y-4">
          <div class="border-1 border-gray-300 rounded-hypr p-4 hover:border-cyber-blue hover:shadow-sm transition-all duration-200">
            <div class="flex items-center justify-between">
              <div>
                <div class="text-sm text-gray-600">email:</div>
                <a 
                  href="mailto:sochoav8a@gmail.com" 
                  class="text-lg hover:text-cyber-blue transition-colors duration-200"
                >
                  sochoav8a@gmail.com
                </a>
              </div>
              <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
          </div>
          
          <div class="border-1 border-gray-300 rounded-hypr p-4 hover:border-cyber-blue hover:shadow-sm transition-all duration-200">
            <div class="flex items-center justify-between">
              <div>
                <div class="text-sm text-gray-600">linkedin:</div>
                <a 
                  href="https://linkedin.com/in/sochoav" 
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-lg hover:text-cyber-blue transition-colors duration-200"
                >
                  /in/sochoav
                </a>
              </div>
              <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </div>
          </div>
          
          <div class="border-1 border-gray-300 rounded-hypr p-4 hover:border-cyber-blue hover:shadow-sm transition-all duration-200">
            <div class="flex items-center justify-between">
              <div>
                <div class="text-sm text-gray-600">github:</div>
                <a 
                  href="https://github.com/sochoav8a" 
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-lg hover:text-cyber-blue transition-colors duration-200"
                >
                  @sochoav8a
                </a>
              </div>
              <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0C5.374 0 0 5.373 0 12 0 17.302 3.438 21.8 8.207 23.387c.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23A11.509 11.509 0 0112 5.803c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576C20.566 21.797 24 17.3 24 12c0-6.627-5.373-12-12-12z"/>
              </svg>
            </div>
          </div>
        </div>
        
        <!-- CTA Button -->
        <div class="text-center pt-8 border-t-1 border-gray-200">
          <a 
            href="mailto:sochoav8a@gmail.com?subject=Project Inquiry" 
            class="inline-block border-1 border-cyber-blue rounded-hypr px-8 py-3 text-cyber-blue hover:bg-cyber-blue hover:text-white transition-all duration-200 text-lg"
          >
            ./start-conversation
          </a>
        </div>
        
        <!-- Terminal prompt -->
        <div class="flex items-center pt-4">
          <span class="text-gray-600">user@system:~$</span>
          <span class="ml-2 animate-blink text-cyber-blue glow-cursor">â–ˆ</span>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .glow-cursor {
    text-shadow: 0 0 10px #00d4ff, 0 0 20px #00d4ff;
  }
</style> 