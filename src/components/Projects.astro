    <div class="grid md:grid-cols-2 gap-8">
      {projects.map((project) => (
        <div class={`group relative bg-slate-800 rounded-xl overflow-hidden border border-slate-700 hover:border-emerald-500/50 transition-all duration-300 hover:shadow-2xl hover:shadow-emerald-500/10 ${project.featured ? 'md:col-span-2 lg:col-span-1' : ''}`}>
