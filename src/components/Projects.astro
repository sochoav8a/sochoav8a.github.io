---

<section id="projects" class="py-20 px-6 bg-gray-50">
  <div class="max-w-6xl mx-auto">
    <!-- Section header -->
    <div class="mb-16">
      <div class="flex items-center mb-4">
        <span class="text-gray-600">user@system:~$</span>
        <span class="ml-2">ls ./projects/</span>
      </div>
      <h2 class="text-4xl font-bold border-b-2 border-cyber-blue pb-2 inline-block">Projects</h2>
    </div>
    
    <div class="grid md:grid-cols-2 gap-8">
      {projects.map((project, index) => (
        <div class="border-1 border-black bg-white rounded-hypr overflow-hidden hover:border-cyber-blue hover:shadow-lg transition-all duration-300">
          <!-- Project header -->
          <div class="border-b-1 border-black p-4 bg-black text-white">
            <h3 class="font-bold">[{index + 1}] {project.title}</h3>
          </div>
          
          <!-- Project image -->
          <div class="border-b-1 border-black bg-white h-48 flex items-center justify-center overflow-hidden">
            {project.image.startsWith('/cbam_cyclegan/') ? (
              <img 
                src={project.image} 
                alt={project.title}
                class="w-full h-full object-contain p-4"
              />
            ) : (
              <div class="text-center">
                <svg class="w-16 h-16 mx-auto text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                <div class="text-sm text-gray-500 mt-2">Project Preview</div>
              </div>
            )}
          </div>
          
          <!-- Project content -->
          <div class="p-6 space-y-4">
            <p class="text-sm leading-relaxed">
              {project.description}
            </p>
            
            <!-- Tech stack -->
            <div class="border-t-1 border-gray-200 pt-4">
              <div class="text-xs text-gray-600 mb-2">tech_stack:</div>
              <div class="flex flex-wrap gap-1">
                {project.tech.map((tech) => (
                  <span class="text-xs border-1 border-gray-300 rounded-hypr px-2 py-1 bg-gray-100 hover:border-cyber-blue hover:text-cyber-blue transition-colors duration-200">
                    {tech}
                  </span>
                ))}
              </div>
            </div>
            
            <!-- Links -->
            <div class="border-t-1 border-gray-200 pt-4 flex gap-4">
              <a 
                href={project.github}
                target="_blank"
                rel="noopener noreferrer"
                class="text-sm border-1 border-black rounded-hypr px-4 py-2 hover:bg-black hover:text-white transition-all duration-200"
              >
                ./source
              </a>
              
              <a 
                href={project.demo}
                target="_blank"
                rel="noopener noreferrer"
                class="text-sm border-1 border-cyber-blue rounded-hypr px-4 py-2 text-cyber-blue hover:bg-cyber-blue hover:text-white transition-all duration-200"
              >
                ./demo
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <!-- View all projects link -->
    <div class="text-center mt-12">
      <a 
        href="https://github.com/sochoav8a" 
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center border-1 border-black rounded-hypr px-6 py-3 hover:bg-black hover:text-white hover:border-cyber-blue transition-all duration-200"
      >
        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 0C5.374 0 0 5.373 0 12 0 17.302 3.438 21.8 8.207 23.387c.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23A11.509 11.509 0 0112 5.803c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576C20.566 21.797 24 17.3 24 12c0-6.627-5.373-12-12-12z"/>
        </svg>
        cd ~/github && ls -la
      </a>
    </div>
  </div>
</section> 