---
// Skills section component
const skillCategories = [
  {
    title: "Frontend Development",
    skills: [
      { name: "React", level: 90 },
      { name: "Vue.js", level: 85 },
      { name: "TypeScript", level: 88 },
      { name: "Tailwind CSS", level: 92 },
      { name: "Astro", level: 80 },
      { name: "Next.js", level: 85 }
    ]
  },
  {
    title: "Backend Development", 
    skills: [
      { name: "TypeScript", level: 88 },
      { name: "Python", level: 95 },
      { name: "Go", level: 85 },
      { name: "PostgreSQL", level: 90 },
      { name: "MongoDB", level: 75 },
      { name: "Rust", level: 82 }
    ]
  },
  {
    title: "Data Science & ML",
    skills: [
      { name: "PyTorch", level: 95 },
      { name: "scikit-learn", level: 88 },
      { name: "Pandas", level: 90 },
      { name: "Jupyter", level: 92 },
      { name: "CUDA", level: 75 },
      { name: "Apache Spark", level: 75 }
    ]
  },
  {
    title: "DevOps & Cloud",
    skills: [
      { name: "AWS", level: 80 },
      { name: "Docker", level: 85 },
      { name: "Kubernetes", level: 70 },
      { name: "GitHub Actions", level: 88 },
      { name: "Azure", level: 95 },
      { name: "Linux", level: 85 }
    ]
  }
];

const tools = [
  "Python", "PyTorch", "TensorFlow", "Scikit-learn",
  "Hugging Face Transformers", "OpenAI API", "Generative AI",
  "GANs & Diffusion Models", "NLP", "Transformer Models",
  "Computer Vision", "TorchVision", "OpenCV",
  "Deep Learning", "Machine Learning",
  "Pandas", "Polars", "NumPy",
  "CUDA & Multi-GPU (DDP)",
  "Airflow", "Apache Spark",
  "SQL / NoSQL", "Snowflake",
  "Docker", "Kubernetes",
  "MLOps CI/CD", "Azure ML & AWS SageMaker"
];
---

<section id="skills" class="py-20 px-6">
  <div class="max-w-6xl mx-auto">
    <!-- Section header -->
    <div class="mb-16">
      <div class="flex items-center mb-4">
        <span class="text-gray-600">user@system:~$</span>
        <span class="ml-2">cat ./skills/expertise.json</span>
      </div>
      <h2 class="text-4xl font-bold border-b-2 border-cyber-blue pb-2 inline-block">Skills</h2>
    </div>
    
    <!-- Skills categories -->
    <div class="grid lg:grid-cols-2 gap-8 mb-16">
      {skillCategories.map((category, categoryIndex) => (
        <div class="border-1 border-black bg-white rounded-hypr overflow-hidden hover:border-cyber-blue transition-colors duration-300">
          <!-- Category header -->
          <div class="border-b-1 border-black p-4 bg-black text-white">
            <h3 class="font-bold">[{categoryIndex + 1}] {category.title}</h3>
          </div>
          
          <!-- Skills list -->
          <div class="p-6 space-y-4">
            {category.skills.map((skill) => (
              <div class="skill-item">
                <div class="flex justify-between items-center mb-2">
                  <span class="font-medium">{skill.name}</span>
                  <span class="text-cyber-blue text-sm font-mono">{skill.level}%</span>
                </div>
                <div class="w-full bg-gray-200 rounded-full h-2 overflow-hidden">
                  <div 
                    class="bg-gradient-to-r from-cyber-blue to-cyber-cyan h-2 rounded-full transition-all duration-1000 ease-out skill-bar"
                    style={`width: ${skill.level}%`}
                  ></div>
                </div>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>
    
    <!-- Tools section -->
    <div class="border-1 border-black bg-white rounded-hypr overflow-hidden hover:border-cyber-blue transition-colors duration-300">
      <div class="border-b-1 border-black p-4 bg-black text-white">
        <h3 class="font-bold">[5] Tools & Technologies</h3>
      </div>
      
      <div class="p-6">
        <div class="mb-6">
          <span class="text-gray-600">user@system:~$</span>
          <span class="ml-2">which --all</span>
        </div>
        
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-3">
          {tools.map((tool) => (
            <div class="border-1 border-gray-300 rounded-hypr p-3 text-sm hover:border-cyber-blue hover:text-cyber-blue transition-all duration-200 hover:shadow-sm">
              {tool}
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .skill-bar {
    animation: fillBar 2s ease-out forwards;
  }
  
  @keyframes fillBar {
    from {
      width: 0%;
    }
  }
  
  .skill-item:hover .skill-bar {
    filter: brightness(1.2);
    box-shadow: 0 0 10px rgba(0, 212, 255, 0.3);
  }
</style> 