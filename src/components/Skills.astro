---

<section id="skills" class="py-20 px-4 sm:px-6 lg:px-8">
  <div class="max-w-6xl mx-auto">
    <div class="text-center mb-16">
      <h2 class="text-4xl font-bold text-slate-100 mb-4">Technical Skills</h2>
      <p class="text-slate-400 text-lg max-w-2xl mx-auto">
        A comprehensive overview of my technical expertise across different domains.
      </p>
    </div>
    
    <div class="grid lg:grid-cols-2 gap-8">
      {skillCategories.map((category) => (
        <div class="bg-slate-800 rounded-xl p-6 border border-slate-700 hover:border-emerald-500/50 transition-all duration-300">
          <div class="flex items-center mb-6">
            <div class="w-12 h-12 bg-emerald-600 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={category.icon}></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-slate-100 ml-4">{category.title}</h3>
          </div>
          
          <div class="space-y-4">
            {category.skills.map((skill) => (
              <div class="skill-item">
                <div class="flex justify-between items-center mb-2">
                  <span class="text-slate-300 font-medium">{skill.name}</span>
                  <span class="text-slate-400 text-sm">{skill.level}%</span>
                </div>
                <div class="w-full bg-slate-700 rounded-full h-2">
                  <div 
                    class="bg-gradient-to-r from-emerald-500 to-cyan-500 h-2 rounded-full skill-bar transition-all duration-1000 ease-out"
                    style={`width: ${skill.level}%`}
                  ></div>
                </div>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>
    
    <!-- Additional skills or certifications -->
    <div class="mt-16 text-center">
      <h3 class="text-2xl font-bold text-slate-100 mb-8">Tools & Technologies</h3>
      <div class="flex flex-wrap justify-center gap-3">
        {[
          "Python", "PyTorch", "TensorFlow", "Scikit-learn",
          "Hugging Face Transformers", "OpenAI API", "Generative AI",
          "GANs & Diffusion Models", "NLP", "Transformer Models",
          "Computer Vision", "TorchVision", "OpenCV",
          "Deep Learning", "Machine Learning",
          "Pandas", "Polars", "NumPy",
          "CUDA & Multi-GPU (DDP)",
          "Airflow", "Apache Spark",
          "SQL / NoSQL", "Snowflake",
          "Docker", "Kubernetes",
          "MLOps CI/CD", "Azure ML & AWS SageMaker"
        ].map((tool) => (
          <span class="px-4 py-2 bg-slate-700 text-slate-300 rounded-lg border border-slate-600 hover:border-emerald-500 hover:text-emerald-400 transition-colors duration-300">
            {tool}
          </span>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .skill-bar {
    animation: fillBar 2s ease-out forwards;
  }
  
  @keyframes fillBar {
    from {
      width: 0%;
    }
  }
  
  .skill-item:hover .skill-bar {
    filter: brightness(1.2);
  }
</style> 