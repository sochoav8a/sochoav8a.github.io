---
// Brutalist Header Design
---

<header class="fixed top-0 left-0 right-0 z-50 bg-mono-0 border-b-4 border-mono-1000">
  <nav class="max-w-7xl mx-auto px-6 py-4">
    <div class="flex items-center justify-between">
      <!-- Logo/Brand -->
      <div class="bg-brutal-yellow px-4 py-2 border-4 border-mono-1000 shadow-brutal transform -rotate-1 hover:rotate-0 transition-transform duration-200">
        <a href="/" class="font-black text-xl text-mono-1000 uppercase tracking-wider">
          S.OCHOA
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-2">
        <a 
          href="#about" 
          class="bg-mono-0 text-mono-1000 px-6 py-3 border-4 border-mono-1000 shadow-brutal font-bold uppercase tracking-wide hover:shadow-brutal-hover hover:translate-x-1 hover:translate-y-1 transition-all duration-200"
        >
          ABOUT
        </a>
        <a 
          href="#projects" 
          class="bg-brutal-blue text-mono-0 px-6 py-3 border-4 border-mono-1000 shadow-brutal font-bold uppercase tracking-wide hover:shadow-brutal-hover hover:translate-x-1 hover:translate-y-1 transition-all duration-200"
        >
          WORK
        </a>
        <a 
          href="#skills" 
          class="bg-brutal-green text-mono-1000 px-6 py-3 border-4 border-mono-1000 shadow-brutal font-bold uppercase tracking-wide hover:shadow-brutal-hover hover:translate-x-1 hover:translate-y-1 transition-all duration-200"
        >
          SKILLS
        </a>
        <a 
          href="#contact" 
          class="bg-brutal-red text-mono-0 px-6 py-3 border-4 border-mono-1000 shadow-brutal font-bold uppercase tracking-wide hover:shadow-brutal-hover hover:translate-x-1 hover:translate-y-1 transition-all duration-200"
        >
          CONTACT
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button 
        id="mobile-menu-button"
        class="md:hidden bg-brutal-purple text-mono-0 p-3 border-4 border-mono-1000 shadow-brutal hover:shadow-brutal-hover hover:translate-x-1 hover:translate-y-1 transition-all duration-200"
        aria-label="Toggle mobile menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden mt-4 space-y-2">
      <a 
        href="#about" 
        class="block bg-mono-0 text-mono-1000 px-6 py-3 border-4 border-mono-1000 shadow-brutal font-bold uppercase tracking-wide text-center hover:shadow-brutal-hover hover:translate-x-1 hover:translate-y-1 transition-all duration-200"
      >
        ABOUT
      </a>
      <a 
        href="#projects" 
        class="block bg-brutal-blue text-mono-0 px-6 py-3 border-4 border-mono-1000 shadow-brutal font-bold uppercase tracking-wide text-center hover:shadow-brutal-hover hover:translate-x-1 hover:translate-y-1 transition-all duration-200"
      >
        WORK
      </a>
      <a 
        href="#skills" 
        class="block bg-brutal-green text-mono-1000 px-6 py-3 border-4 border-mono-1000 shadow-brutal font-bold uppercase tracking-wide text-center hover:shadow-brutal-hover hover:translate-x-1 hover:translate-y-1 transition-all duration-200"
      >
        SKILLS
      </a>
      <a 
        href="#contact" 
        class="block bg-brutal-red text-mono-0 px-6 py-3 border-4 border-mono-1000 shadow-brutal font-bold uppercase tracking-wide text-center hover:shadow-brutal-hover hover:translate-x-1 hover:translate-y-1 transition-all duration-200"
      >
        CONTACT
      </a>
    </div>
  </nav>
</header>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');

    mobileMenuButton?.addEventListener('click', () => {
      mobileMenu?.classList.toggle('hidden');
    });

    // Close mobile menu when clicking on a link
    const mobileLinks = mobileMenu?.querySelectorAll('a');
    mobileLinks?.forEach(link => {
      link.addEventListener('click', () => {
        mobileMenu?.classList.add('hidden');
      });
    });

    // Smooth scroll for anchor links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });
  });
</script> 