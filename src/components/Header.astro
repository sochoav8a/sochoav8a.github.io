            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button 
        id="mobile-menu-button"
        class="md:hidden bg-brutal-purple text-mono-0 p-3 border-4 border-mono-1000 shadow-brutal hover:shadow-brutal-hover hover:translate-x-1 hover:translate-y-1 transition-all duration-200"
        aria-label="Toggle mobile menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden mt-4 space-y-2">
      <a 
        href="#about" 
        class="block bg-mono-0 text-mono-1000 px-6 py-3 border-4 border-mono-1000 shadow-brutal font-bold uppercase tracking-wide text-center hover:shadow-brutal-hover hover:translate-x-1 hover:translate-y-1 transition-all duration-200"
      >
        ABOUT
      </a>
      <a 
        href="#projects" 
        class="block bg-brutal-blue text-mono-0 px-6 py-3 border-4 border-mono-1000 shadow-brutal font-bold uppercase tracking-wide text-center hover:shadow-brutal-hover hover:translate-x-1 hover:translate-y-1 transition-all duration-200"
      >
        WORK
      </a>
      <a 
        href="#skills" 
        class="block bg-brutal-green text-mono-1000 px-6 py-3 border-4 border-mono-1000 shadow-brutal font-bold uppercase tracking-wide text-center hover:shadow-brutal-hover hover:translate-x-1 hover:translate-y-1 transition-all duration-200"
      >
        SKILLS
      </a>
      <a 
        href="#contact" 
        class="block bg-brutal-red text-mono-0 px-6 py-3 border-4 border-mono-1000 shadow-brutal font-bold uppercase tracking-wide text-center hover:shadow-brutal-hover hover:translate-x-1 hover:translate-y-1 transition-all duration-200"
      >
        CONTACT
      </a>
    </div>
  </nav>
</header>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');

    mobileMenuButton?.addEventListener('click', () => {
      mobileMenu?.classList.toggle('hidden');
    });

    // Close mobile menu when clicking on a link
    const mobileLinks = mobileMenu?.querySelectorAll('a');
    mobileLinks?.forEach(link => {
      link.addEventListener('click', () => {
        mobileMenu?.classList.add('hidden');
      });
    });

    // Smooth scroll for anchor links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });
  });
</script> 