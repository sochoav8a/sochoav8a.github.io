---
// Header component with navigation
---

<header class="fixed top-0 w-full bg-white/95 border-b-1 border-black z-50 backdrop-blur-sm">
  <nav class="max-w-6xl mx-auto px-6">
    <div class="flex justify-between items-center py-4">
      <div class="flex items-center">
        <a href="/" class="text-lg font-bold text-black hover:bg-black hover:text-white px-3 py-2 rounded-hypr transition-all duration-200">
          [santiago@ochoa ~]$
        </a>
      </div>
      
      <div class="hidden md:flex space-x-1">
        <a href="#about" class="px-4 py-2 text-black hover:bg-black hover:text-white transition-all duration-200 rounded-hypr border-1 border-transparent hover:border-cyber-blue">./about</a>
        <a href="#projects" class="px-4 py-2 text-black hover:bg-black hover:text-white transition-all duration-200 rounded-hypr border-1 border-transparent hover:border-cyber-blue">./projects</a>
        <a href="#skills" class="px-4 py-2 text-black hover:bg-black hover:text-white transition-all duration-200 rounded-hypr border-1 border-transparent hover:border-cyber-blue">./skills</a>
        <a href="#contact" class="px-4 py-2 text-black hover:bg-black hover:text-white transition-all duration-200 rounded-hypr border-1 border-transparent hover:border-cyber-blue">./contact</a>
      </div>
      
      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button id="mobile-menu-btn" class="p-2 border-1 border-black rounded-hypr hover:bg-black hover:text-white transition-all duration-200">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
    
    <!-- Mobile menu -->
    <div id="mobile-menu" class="md:hidden hidden border-t-1 border-black bg-white rounded-b-hypr">
      <div class="flex flex-col py-4 space-y-2">
        <a href="#about" class="px-4 py-3 text-black hover:bg-black hover:text-white transition-all duration-200 mx-2 rounded-hypr">./about</a>
        <a href="#projects" class="px-4 py-3 text-black hover:bg-black hover:text-white transition-all duration-200 mx-2 rounded-hypr">./projects</a>
        <a href="#skills" class="px-4 py-3 text-black hover:bg-black hover:text-white transition-all duration-200 mx-2 rounded-hypr">./skills</a>
        <a href="#contact" class="px-4 py-3 text-black hover:bg-black hover:text-white transition-all duration-200 mx-2 rounded-hypr">./contact</a>
      </div>
    </div>
  </nav>
</header>

<script>
  // Mobile menu toggle
  document.addEventListener('DOMContentLoaded', () => {
    const btn = document.getElementById('mobile-menu-btn');
    const menu = document.getElementById('mobile-menu');
    
    btn?.addEventListener('click', () => {
      menu?.classList.toggle('hidden');
    });
  });
</script> 