---
// Brutalist Hero Design
---

<section class="min-h-screen flex items-center px-6 pt-20 relative overflow-hidden">
  <!-- Geometric background elements -->
  <div class="absolute inset-0">
    <div class="absolute top-20 right-20 w-32 h-32 bg-brutal-yellow transform rotate-45"></div>
    <div class="absolute bottom-40 left-10 w-24 h-24 bg-brutal-red"></div>
    <div class="absolute top-1/2 right-1/4 w-16 h-40 bg-brutal-blue transform -rotate-12"></div>
    <div class="absolute bottom-20 right-40 w-20 h-20 bg-brutal-green transform rotate-12"></div>
  </div>

  <div class="max-w-7xl mx-auto relative z-10 w-full">
    <!-- Main content grid -->
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Left column - Main text -->
      <div class="animate-slide-brutal">
        <!-- Status indicator -->
        <div class="inline-block mb-8">
          <div class="bg-brutal-green text-mono-1000 px-6 py-3 border-4 border-mono-1000 shadow-brutal font-bold text-lg">
            AVAILABLE FOR HIRE
          </div>
        </div>

        <!-- Main heading -->
        <h1 class="font-display font-black text-huge lg:text-ultra xl:text-mega leading-none mb-6 uppercase tracking-tight">
          Santiago<br/>
          <span class="text-brutal-red">Ochoa</span>
        </h1>

        <!-- Subtitle -->
        <div class="border-l-6 border-mono-1000 pl-6 mb-8">
          <p class="text-2xl lg:text-3xl font-bold mb-4">
            DEVELOPER &<br/>
            DATA WIZARD
          </p>
          <p class="text-lg font-medium max-w-md">
            I BUILD SYSTEMS THAT WORK.<br/>
            FULL-STACK + DATA SCIENCE.<br/>
            NO BULLSHIT, JUST RESULTS.
          </p>
        </div>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4">
          <a 
            href="#projects" 
            class="group bg-mono-1000 text-mono-0 px-8 py-4 border-4 border-mono-1000 shadow-brutal font-bold text-lg uppercase tracking-wide hover:shadow-brutal-hover hover:translate-x-1 hover:translate-y-1 transition-all duration-200"
          >
            VIEW WORK →
          </a>
          
          <a 
            href="#contact" 
            class="group bg-brutal-yellow text-mono-1000 px-8 py-4 border-4 border-mono-1000 shadow-brutal font-bold text-lg uppercase tracking-wide hover:shadow-brutal-hover hover:translate-x-1 hover:translate-y-1 transition-all duration-200"
          >
            CONTACT ME
          </a>
        </div>
      </div>

      <!-- Right column - Tech stack boxes -->
      <div class="grid grid-cols-2 gap-6">
        <div class="bg-brutal-blue text-mono-0 p-6 border-4 border-mono-1000 shadow-brutal-lg hover:animate-shake">
          <h3 class="font-black text-xl mb-2">FRONTEND</h3>
          <p class="font-bold text-sm">REACT • VUE • TYPESCRIPT</p>
        </div>
        
        <div class="bg-brutal-green text-mono-1000 p-6 border-4 border-mono-1000 shadow-brutal-lg hover:animate-shake">
          <h3 class="font-black text-xl mb-2">BACKEND</h3>
          <p class="font-bold text-sm">PYTHON • NODE • GO</p>
        </div>
        
        <div class="bg-brutal-red text-mono-0 p-6 border-4 border-mono-1000 shadow-brutal-lg hover:animate-shake">
          <h3 class="font-black text-xl mb-2">DATA</h3>
          <p class="font-bold text-sm">PYTORCH • PANDAS • ML</p>
        </div>
        
        <div class="bg-brutal-purple text-mono-0 p-6 border-4 border-mono-1000 shadow-brutal-lg hover:animate-shake">
          <h3 class="font-black text-xl mb-2">CLOUD</h3>
          <p class="font-bold text-sm">AWS • DOCKER • K8S</p>
        </div>
      </div>
    </div>

    <!-- Bottom section -->
    <div class="mt-20 flex justify-between items-end">
      <div class="bg-mono-1000 text-mono-0 px-4 py-2 border-4 border-mono-1000 transform -rotate-2">
        <p class="font-bold">EST. 2020</p>
      </div>
      
      <div class="text-right">
        <div class="inline-block bg-brutal-orange text-mono-1000 p-4 border-4 border-mono-1000 shadow-brutal transform rotate-2">
          <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
            <path d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
          </svg>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .glow-cursor {
    text-shadow: 0 0 10px #00d4ff, 0 0 20px #00d4ff;
  }
</style> 
</style> 